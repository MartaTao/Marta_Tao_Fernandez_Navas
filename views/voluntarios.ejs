<%- include("templates/cabecera.ejs", {titulo:'Voluntarios'}) %>
<div class="container">
    <h1>Voluntarios</h1>
    <div class="row">
        <div class="col-6"><a class="btn btn-info btn-block my-4" href="/voluntarios/aniadirVoluntario">Añadir persona mayor</a></div>
        <div class="col-6"><a class="btn btn-info btn-block my-4" href="/">Volver</a></div>
    </div>
    <table class="table">
       <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellidos</th>
                <th scope="col">Edad</th>
                <th scope="col">Movil</th>
                <th scope="col">Formación</th>
                <th scope="col">Experiencia</th>
                <th scope="col">Acción</th>
            </tr>
       </thead>
       <tbody>
            <%if(arrayVoluntarios.length>0){%>
                    <%arrayVoluntarios.forEach(voluntarios=> { %>
                        <tr>
                            <th scope="row">
                                <%= voluntarios.id %>
                            </th>
                            <td>
                                <%= voluntarios.nombre %>
                            </td>
                            <td>
                                <%= voluntarios.apellidos%>
                            </td>
                            <td>
                                <%= voluntarios.edad %>
                            </td>
                            <td>
                                <%= voluntarios.movil %>
                            </td>
                            <td>
                                <%= voluntarios.formacion%>
                            </td>
                            <td>
                                <%= voluntarios.experiencia%>
                            </td>
                            <td>
                                <a class="btn btn-info btn-sm" href="voluntarios/<%= voluntarios.id %>">Editar/Eliminar</a>
                            </td>
                        </tr>
                        <% }) %>
           <% }%>
       </tbody>
    </table>
</div>
<%- include("templates/footer.ejs") %>